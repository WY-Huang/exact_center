{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                /* 项目所需的头文件路径 */
                "-I","${workspaceFolder}/",
                // "-I","/usr/local/include/opencv4/",
                "-I","/usr/include/opencv4/",
                "-I","/usr/local/include/vtk-7.1",
                // "-I", "/home/wanyel/TPSoftware/vcpkg/installed/x64-linux/include",
                // "-I","/usr/include/python3.8",
                "/home/wanyel/TPSoftware/tutorial_interfaces/install/tutorial_interfaces/include",   // 自定义ros2接口

                /* 项目所需的库文件路径 */
                "-L", "/usr/local/lib",

                /* OpenCV的lib库 */
                "/usr/local/lib/libopencv_*",
                "/usr/lib/x86_64-linux-gnu/libopencv_*",
                "-L","/usr/local/lib/libvtk*",
                "/opt/ros/galactic/lib/lib*",
                // "/usr/lib/x86_64-linux-gnu/libpython3.8*",
                "/usr/lib/x86_64-linux-gnu/libboost_*",
                "/home/wanyel/TPSoftware/tutorial_interfaces/install/tutorial_interfaces/lib/libtutorial_interfaces*"


            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}